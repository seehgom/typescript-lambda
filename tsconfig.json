{
    "compilerOptions": {
      "target": "es2020",
      "module":"ESNext",
      "strict": true,
      "esModuleInterop": true, 
      "skipLibCheck": true,
            "moduleResolution": "node",

      "forceConsistentCasingInFileNames": true, 
            "allowSyntheticDefaultImports": true,

      "outDir": "./"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
